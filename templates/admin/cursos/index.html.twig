{% extends 'admin.html.twig' %}

{% block body %}

<div class="col-12">
  <div class="row">
    <div class="col-md-10">
      <h3> Cursos </h3>
    </div>
    <div class="col-md-2 align-rigth">
      <a href="{{ path('cursos_form') }}"><button type="submit" class="btn btn-primary float-right"> Cadastrar </button></a>
    </div>
  </div>
</div>
<br/>
<div class="col-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Imagem</th>
        <th scope="col">Título</th>
        <th scope="col">Descrição</th>
        <th scope="col" class="text-center">Categorias</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>

    <tbody>
      {% for curso in cursos %}
      <tr>
        <td>
          {% if curso.imagem %}
            <img src="/imagens/cursos/{{ curso.imagem }}" width="120" height="100" />
          {% else %}
            <img src="{{ asset('/imagens/noimagem.png') }}" width="120" height="100" />
          {% endif %}
        </td>
        <td>{{ curso.titulo }}</td>
        <td>{{ curso.descricao }}</td>
        <td>
          <ul>
            {% for cat in curso.categorias %}
              <li> {{ cat.nome }} </li>
            {% endfor %}
          </ul>
        </td>
        <td style="width:15px;">
          <a href="{{ path('cursos_edit',{'id': curso.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>&nbsp;
          <a href="#"><i class="fa fa-trash" aria-hidden="true"></i></a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% endblock %}
