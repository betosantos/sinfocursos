{% extends 'front.html.twig' %}

{% block body %}
<style>
html,
body {
  height: 100%;
}
</style>


<!-- Page Content -->
<div class="container" style="margin-top:30px;">

  <!-- Portfolio Item Heading -->
  <h1 class="my-4">Curso
    <small>{{ curso.titulo }}</small>
  </h1>

  <!-- Portfolio Item Row -->
  <div class="row">

    <div class="col-md-5">
      <img class="img-fluid" src="{{ asset('imagens/cursos/' ~ curso.imagem) }}" alt="" width="450" height="400">
      <center><a href="#"><h4 class="my-3">Download</h4></a></center>
    </div>
    <!-- <div class="offset-md-1"></div> -->
    <div class="col-md-5">
      <h3 class="my-3">Descrição</h3>
      <p>{{ curso.descricao }}</p>

      <h3 class="my-3">Categorias</h3>
      <ul>
        {% for cat in curso.categorias %}
        <li> {{ cat.nome }} </li>
        {% endfor %}
      </ul>

    </div>

  </div>

  <div class="espaco" style="margin-top:100px;">
  </div>

</div>
<!-- /.container -->
{% endblock %}
