<div class="container">


  <!-- Page Features -->
  <div class="" style="margin-top:70px;">
    <h2 class="card-title">Novidades </h2>
    <hr>
  </div>

  <div class="row text-center">
    {% for nov in categoriaNov.cursos %}
    <div class="col-lg-3 col-md-6 mb-4">
      <div class="card h-100">
        <img class="card-img-top" src="{{ asset('imagens/cursos/' ~ nov.imagem) }}" alt="" width="253" height="169">
        <div class="card-body">
          <a href="{{ path('detalhes',{'id':nov.id}) }}">
            <h4 class="card-title">{{ nov.titulo }}</h4>
          </a>
          <p class="card-text">{{ nov.descricao|slice(0, 86) }}</p>
        </div>

        <div class="card-footer">
          <a href="#" class="btn btn-primary">Detalhes</a>        
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
